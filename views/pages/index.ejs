<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body>
  
  <header>
    <%- include('../partials/header'); %>
  </header>

<main>

  <div  id ="TopCard" class="d-flex justify-content-center align-items-center vh-100">
    <div id ="card" class="card" style="width: 18rem;">
      <!-- <img class="card-img-top" src="img/Bag_Item2.jpeg" alt="Card image cap"> -->
      <img class="card-img-top img-fluid" src="<%= items[0].img %>" alt="Card image cap">

      <div class="card-body">
        <h5 class="card-title"><%= items[0].title %></h5>
        <p class="card-text"><%= items[0].description %></p>
        <form action="/infoForm" method="get">

          <div class="d-flex align-items-center justify-content-center m-3">
            <div id="decrement" class="btn btn-light">-</div>
            <input id="counter" name="counter" type="text" class="form-control text-center mx-2" value="<%= items[0].mincount %>" style="width: 60px;" min="<%= items[0].mincount %>" max="<%= items[0].maxcount %>" readonly required>
            <div id="increment" class="btn btn-light">+</div>
          </div>

          <div class="d-flex justify-content-center">
          <input class="btn btn-primary" type="submit" value="Buy"></span>
        </form>

        </div>
      </div>
    </div>
  </div>

</main>

<footer>
  <br><br>
  <%- include('../partials/footer'); %>
</footer>



<script>
var element = document.getElementById("homeNav");
element.classList.add("active");

// Counter Input
const counterInput = document.getElementById('counter');
const incrementButton = document.getElementById('increment');
const decrementButton = document.getElementById('decrement');

// Fetch the min and max values from the input element
const minValue = parseInt(counterInput.getAttribute('min'), 10);
const maxValue = parseInt(counterInput.getAttribute('max'), 10);

incrementButton.addEventListener('click', () => {
  let value = parseInt(counterInput.value, 10);
  if (value < maxValue) {
    counterInput.value = value + 1;
  }
});

decrementButton.addEventListener('click', () => {
  let value = parseInt(counterInput.value, 10);
  if (value > minValue) {
    counterInput.value = value - 1;
  }
});

</script>

</body>
</html>