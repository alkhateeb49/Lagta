              <option value="8">Karak</option>
              <option value="9">Maan</option>
              <option value="10">Madaba</option>
              <option value="11">Mafraq</option>
              <option value="12">Tafilah</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="area" class="form-label">Area</label>
            <select class="form-select" id="area" name="area" required disabled>
              <option selected disabled>Select area</option>
            </select>
          </div>


          <input class="btn btn-primary" type="submit" value="Buy"></span>
        </form>
      </div>
    </div>
  </div>


</main>

